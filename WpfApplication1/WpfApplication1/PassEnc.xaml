<Window x:Name="wnPassword" x:Class="BlueChecker.PassEnc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueChecker"
        mc:Ignorable="d"
        Title="Password Encoder" Height="192.722" Width="311.544">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="116*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="BlueSource Password" HorizontalAlignment="Left" Margin="5,4,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="button" Content="Encrypt and Store" HorizontalAlignment="Left" Margin="10,0.5,0,0" VerticalAlignment="Top" Width="268" Height="28" Background="{x:Null}" Click="button_Click" Grid.Row="1"/>
        <TextBox x:Name="txPasswordBS" HorizontalAlignment="Left" Height="23" Margin="10,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268"/>
        <Label x:Name="label_Copy" Content="GMail Password" HorizontalAlignment="Left" Margin="5,58,0,0" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txPasswordGM" HorizontalAlignment="Left" Height="23" Margin="10,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268"/>

    </Grid>
</Window>
